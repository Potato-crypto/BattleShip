<UserControl x:Class="BattleShip.Client.ChatControl"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:BattleShip.Client"
             mc:Ignorable="d" 
             d:DesignHeight="400" d:DesignWidth="300"
             MouseLeftButtonDown="ChatControl_MouseLeftButtonDown"
             MouseLeftButtonUp="ChatControl_MouseLeftButtonUp"
             MouseMove="ChatControl_MouseMove">
    
    <UserControl.Resources>
        <local:BoolToVisibilityConverter x:Key="BoolToVisibilityConverter"/>
        
        <Style x:Key="ChatMessageItemStyle" TargetType="ListViewItem">
            <Setter Property="Background" Value="Transparent"/>
            <Setter Property="BorderThickness" Value="0"/>
            <Setter Property="Padding" Value="0"/>
            <Setter Property="Margin" Value="0,5,0,0"/>
            <Setter Property="HorizontalContentAlignment" Value="Stretch"/>
            <Setter Property="Template">
                <Setter.Value>
                    <ControlTemplate TargetType="ListViewItem">
                        <ContentPresenter HorizontalAlignment="Stretch"/>
                    </ControlTemplate>
                </Setter.Value>
            </Setter>
        </Style>
        
        <!-- Ð¨Ð°Ð±Ð»Ð¾Ð½ Ð´Ð»Ñ ÑÐ¾Ð¾Ð±Ñ‰ÐµÐ½Ð¸Ð¹ -->
        <DataTemplate x:Key="SystemMessageTemplate">
            <Border Background="#2c3e50" 
                    CornerRadius="5" 
                    Padding="8,6"
                    HorizontalAlignment="Center"
                    MaxWidth="280">
                <StackPanel>
                    <TextBlock Text="{Binding Timestamp, StringFormat='[HH:mm:ss]'}" 
                               Foreground="#95a5a6" 
                               FontSize="9"
                               HorizontalAlignment="Center"/>
                    <TextBlock Text="{Binding Text}" 
                               Foreground="#ecf0f1" 
                               FontSize="12"
                               TextWrapping="Wrap"
                               TextAlignment="Center"
                               FontStyle="Italic"/>
                </StackPanel>
            </Border>
        </DataTemplate>
        
        <DataTemplate x:Key="OwnMessageTemplate">
            <Border Background="#2ecc71" 
                    CornerRadius="8 0 8 8" 
                    Padding="10,8"
                    HorizontalAlignment="Right"
                    MaxWidth="280"
                    Margin="20,0,5,0">
                <StackPanel>
                    <TextBlock Text="Ð’Ñ‹" 
                               Foreground="White" 
                               FontSize="10"
                               FontWeight="Bold"/>
                    <TextBlock Text="{Binding Text}" 
                               Foreground="White" 
                               FontSize="13"
                               TextWrapping="Wrap"
                               Margin="0,2,0,0"/>
                    <TextBlock Text="{Binding Timestamp, StringFormat='HH:mm'}" 
                               Foreground="White" 
                               FontSize="9"
                               HorizontalAlignment="Right"
                               Opacity="0.8"/>
                </StackPanel>
            </Border>
        </DataTemplate>
        
        <DataTemplate x:Key="OpponentMessageTemplate">
            <Border Background="#3498db" 
                    CornerRadius="0 8 8 8" 
                    Padding="10,8"
                    HorizontalAlignment="Left"
                    MaxWidth="280"
                    Margin="5,0,20,0">
                <StackPanel>
                    <TextBlock Text="{Binding Sender}" 
                               Foreground="White" 
                               FontSize="10"
                               FontWeight="Bold"/>
                    <TextBlock Text="{Binding Text}" 
                               Foreground="White" 
                               FontSize="13"
                               TextWrapping="Wrap"
                               Margin="0,2,0,0"/>
                    <TextBlock Text="{Binding Timestamp, StringFormat='HH:mm'}" 
                               Foreground="White" 
                               FontSize="9"
                               HorizontalAlignment="Right"
                               Opacity="0.8"/>
                </StackPanel>
            </Border>
        </DataTemplate>
        
        <!-- DataTemplateSelector Ð´Ð»Ñ Ð²Ñ‹Ð±Ð¾Ñ€Ð° Ð½ÑƒÐ¶Ð½Ð¾Ð³Ð¾ ÑˆÐ°Ð±Ð»Ð¾Ð½Ð° -->
        <local:ChatMessageTemplateSelector x:Key="ChatMessageTemplateSelector"
                                           SystemTemplate="{StaticResource SystemMessageTemplate}"
                                           OwnTemplate="{StaticResource OwnMessageTemplate}"
                                           OpponentTemplate="{StaticResource OpponentMessageTemplate}"/>
    </UserControl.Resources>
    
    <Grid>
        <!-- ÐžÑÐ½Ð¾Ð²Ð½Ð¾Ðµ Ð¾ÐºÐ½Ð¾ Ñ‡Ð°Ñ‚Ð° -->
        <Border Background="#1e3c72" 
                CornerRadius="10"
                BorderBrush="#4a69bd"
                BorderThickness="2"
                RenderTransformOrigin="0.5,0.5">
            <Border.RenderTransform>
                <TranslateTransform x:Name="ChatTransform"/>
            </Border.RenderTransform>
            
            <Grid>
                <Grid.RowDefinitions>
                    <RowDefinition Height="Auto"/>
                    <RowDefinition Height="*"/>
                    <RowDefinition Height="Auto"/>
                </Grid.RowDefinitions>

                <!-- Ð—Ð°Ð³Ð¾Ð»Ð¾Ð²Ð¾Ðº Ñ‡Ð°Ñ‚Ð° (Ð¾Ð±Ð»Ð°ÑÑ‚ÑŒ Ð´Ð»Ñ Ð¿ÐµÑ€ÐµÑ‚Ð°ÑÐºÐ¸Ð²Ð°Ð½Ð¸Ñ) -->
                <Border Grid.Row="0"
                        Background="#4a69bd"
                        CornerRadius="8,8,0,0"
                        Padding="10"
                        Cursor="SizeAll">
                    <Grid>
                        <Grid.ColumnDefinitions>
                            <ColumnDefinition Width="*"/>
                            <ColumnDefinition Width="Auto"/>
                        </Grid.ColumnDefinitions>
                        
                        <TextBlock x:Name="ChatTitle"
                                   Text="ðŸ’¬ Ð§Ð°Ñ‚ Ñ ÑÐ¾Ð¿ÐµÑ€Ð½Ð¸ÐºÐ¾Ð¼"
                                   Foreground="White"
                                   FontSize="14"
                                   FontWeight="Bold"
                                   Grid.Column="0"/>
                        
                        <Button x:Name="CloseChatButton"
                                Content="âœ•"
                                Width="25"
                                Height="25"
                                Background="Transparent"
                                Foreground="White"
                                BorderThickness="0"
                                FontSize="12"
                                FontWeight="Bold"
                                Cursor="Hand"
                                Grid.Column="1"
                                Click="CloseChatButton_Click">
                            <Button.Resources>
                                <Style TargetType="Border">
                                    <Setter Property="CornerRadius" Value="12"/>
                                </Style>
                            </Button.Resources>
                        </Button>
                    </Grid>
                </Border>

                <!-- Ð˜ÑÑ‚Ð¾Ñ€Ð¸Ñ ÑÐ¾Ð¾Ð±Ñ‰ÐµÐ½Ð¸Ð¹ -->
                <Border Grid.Row="1"
                        Background="#16213e"
                        Margin="1">
                    <ListView x:Name="MessagesListView"
                              Background="Transparent"
                              BorderThickness="0"
                              ScrollViewer.HorizontalScrollBarVisibility="Disabled"
                              ScrollViewer.VerticalScrollBarVisibility="Auto"
                              ItemContainerStyle="{StaticResource ChatMessageItemStyle}"
                              ItemTemplateSelector="{StaticResource ChatMessageTemplateSelector}">
                    </ListView>
                </Border>

                <!-- ÐŸÐ¾Ð»Ðµ Ð²Ð²Ð¾Ð´Ð° Ð¸ ÐºÐ½Ð¾Ð¿ÐºÐ° Ð¾Ñ‚Ð¿Ñ€Ð°Ð²ÐºÐ¸ -->
                <Border Grid.Row="2"
                        Background="#1e3c72"
                        CornerRadius="0,0,8,8"
                        Padding="10">
                    <Grid>
                        <Grid.ColumnDefinitions>
                            <ColumnDefinition Width="*"/>
                            <ColumnDefinition Width="Auto"/>
                        </Grid.ColumnDefinitions>
                        
                        <TextBox x:Name="MessageInput"
                                 Grid.Column="0"
                                 Background="#0f3460"
                                 Foreground="White"
                                 BorderBrush="#4a69bd"
                                 BorderThickness="1"
                                 FontSize="12"
                                 Padding="8"
                                 VerticalContentAlignment="Center"
                                 KeyDown="MessageInput_KeyDown">
                            <TextBox.Resources>
                                <Style TargetType="Border">
                                    <Setter Property="CornerRadius" Value="5"/>
                                </Style>
                            </TextBox.Resources>
                        </TextBox>
                        
                        <Button x:Name="SendButton"
                                Grid.Column="1"
                                Content="ÐžÑ‚Ð¿Ñ€Ð°Ð²Ð¸Ñ‚ÑŒ"
                                Width="80"
                                Height="35"
                                Background="#2ecc71"
                                Foreground="White"
                                BorderThickness="0"
                                FontSize="12"
                                FontWeight="Bold"
                                Margin="10,0,0,0"
                                Cursor="Hand"
                                Click="SendButton_Click">
                            <Button.Resources>
                                <Style TargetType="Border">
                                    <Setter Property="CornerRadius" Value="5"/>
                                </Style>
                            </Button.Resources>
                        </Button>
                    </Grid>
                </Border>
            </Grid>
        </Border>
    </Grid>
</UserControl>