<Window x:Class="BattleShip.Client.AlertWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="Уведомление" 
        Height="250" 
        Width="400"
        WindowStartupLocation="CenterOwner"
        ResizeMode="NoResize"
        WindowStyle="None"
        Background="Transparent"
        AllowsTransparency="True">

    <Window.Effect>
        <DropShadowEffect BlurRadius="20" ShadowDepth="0" Color="#1a1a2e" Opacity="0.8"/>
    </Window.Effect>

    <Border CornerRadius="15" BorderBrush="#4a69bd" BorderThickness="2">
        <Border.Background>
            <LinearGradientBrush StartPoint="0,0" EndPoint="1,1">
                <GradientStop Color="#0c2461" Offset="0"/>
                <GradientStop Color="#1e3c72" Offset="0.5"/>
                <GradientStop Color="#0c2461" Offset="1"/>
            </LinearGradientBrush>
        </Border.Background>

        <Grid>
            <Grid.RowDefinitions>
                <RowDefinition Height="Auto"/>
                <RowDefinition Height="*"/>
                <RowDefinition Height="Auto"/>
            </Grid.RowDefinitions>

            <!-- Заголовок с иконкой -->
            <Border Grid.Row="0" 
                    x:Name="HeaderBorder"
                    Background="#4a69bd" 
                    CornerRadius="13,13,0,0"
                    Padding="15">
                <Grid>
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition Width="Auto"/>
                        <ColumnDefinition Width="*"/>
                    </Grid.ColumnDefinitions>

                    <TextBlock x:Name="IconText"
                               Grid.Column="0"
                               Text="ℹ️"
                               FontSize="24"
                               Foreground="White"
                               Margin="0,0,10,0"/>

                    <TextBlock x:Name="TitleText"
                               Grid.Column="1"
                               Text="Уведомление"
                               Foreground="White"
                               FontSize="18"
                               FontWeight="Bold"/>
                </Grid>
            </Border>

            <!-- Сообщение -->
            <ScrollViewer Grid.Row="1" 
                         VerticalScrollBarVisibility="Auto"
                         Margin="20">
                <TextBlock x:Name="MessageText"
                           Text="Сообщение"
                           Foreground="White"
                           FontSize="14"
                           TextWrapping="Wrap"
                           TextAlignment="Center"/>
            </ScrollViewer>

            <!-- Кнопки -->
            <Border Grid.Row="2"
                    Background="#1e3c72"
                    CornerRadius="0,0,13,13"
                    Padding="15">
                <Button x:Name="OkButton"
                        Content="ОК"
                        Width="100"
                        Height="35"
                        Background="#2ecc71"
                        Foreground="White"
                        FontSize="14"
                        FontWeight="Bold"
                        BorderThickness="0"
                        Cursor="Hand"
                        Click="OkButton_Click"
                        HorizontalAlignment="Center">
                    <Button.Resources>
                        <Style TargetType="Border">
                            <Setter Property="CornerRadius" Value="8"/>
                        </Style>
                    </Button.Resources>
                </Button>
            </Border>
        </Grid>
    </Border>
</Window>