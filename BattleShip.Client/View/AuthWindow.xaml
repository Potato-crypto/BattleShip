<Window x:Class="BattleShip.Client.AuthWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="Морской Бой"
        Height="350"
        Width="400"
        WindowStartupLocation="CenterScreen"
        ResizeMode="NoResize"
        WindowStyle="None"
        Background="Transparent"
        AllowsTransparency="True">
    
    <!-- Эффект тени окна -->
    <Window.Effect>
        <DropShadowEffect BlurRadius="20" ShadowDepth="0" Color="#1a1a2e" Opacity="0.8"/>
    </Window.Effect>
    
    <Border CornerRadius="20" BorderBrush="#4a69bd" BorderThickness="2">
        
        <!-- Градиентный фон -->
        <Border.Background>
            <LinearGradientBrush StartPoint="0,0" EndPoint="1,1">
                <GradientStop Color="#0c2461" Offset="0"/>
                <GradientStop Color="#1e3c72" Offset="0.5"/>
                <GradientStop Color="#0c2461" Offset="1"/>
            </LinearGradientBrush>
        </Border.Background>
        
        <Grid>
            <Grid.RowDefinitions>
                <RowDefinition Height="*"/>
                <RowDefinition Height="*"/>
                <RowDefinition Height="Auto"/>
            </Grid.RowDefinitions>
            
            <!-- Иконка -->
            <Viewbox Grid.Row="0" Width="80" Height="80" HorizontalAlignment="Center" VerticalAlignment="Center">
                <Canvas Width="24" Height="24">
                    <!-- Иконка корабля -->
                    <Path Fill="#4a69bd" Data="M12,2 L20,10 L20,14 L4,14 L4,10 Z M2,8 L22,8 L22,16 L20,18 L4,18 L2,16 Z M8,10 L8,12 L10,12 L10,10 Z M14,10 L14,12 L16,12 L16,10 Z"/>
                </Canvas>
            </Viewbox>
            
            <!-- Кнопки -->
            <StackPanel Grid.Row="1" VerticalAlignment="Center" HorizontalAlignment="Center" >
                
                <!-- Кнопка авторизации -->
                <Button x:Name="LoginButton" 
                        Content="Авторизоваться" 
                        Width="250" 
                        Height="50"
                        FontSize="16"
                        FontWeight="Bold"
                        Foreground="White"
                        BorderThickness="0"
                        Cursor="Hand"
                        Click="LoginButton_Click">
                    <Button.Background>
                        <LinearGradientBrush StartPoint="0,0" EndPoint="1,1">
                            <GradientStop Color="#4a69bd" Offset="0"/>
                            <GradientStop Color="#6a89cc" Offset="1"/>
                        </LinearGradientBrush>
                    </Button.Background>
                    <Button.Resources>
                        <Style TargetType="Border">
                            <Setter Property="CornerRadius" Value="10"/>
                        </Style>
                    </Button.Resources>
                    <Button.Effect>
                        <DropShadowEffect BlurRadius="10" ShadowDepth="2" Color="#4a69bd" Opacity="0.5"/>
                    </Button.Effect>
                </Button>
                
                <!-- Кнопка игры как гость -->
                <Button x:Name="GuestButton" 
                        Content="Играть как гость" 
                        Width="250" 
                        Height="50"
                        FontSize="16"
                        FontWeight="Bold"
                        Foreground="#4a69bd"
                        Background="Transparent"
                        BorderBrush="#4a69bd"
                        BorderThickness="2"
                        Cursor="Hand"
                        Click="GuestButton_Click">
                    <Button.Resources>
                        <Style TargetType="Border">
                            <Setter Property="CornerRadius" Value="10"/>
                        </Style>
                    </Button.Resources>
                    <Button.Effect>
                        <DropShadowEffect BlurRadius="5" ShadowDepth="1" Color="#4a69bd" Opacity="0.3"/>
                    </Button.Effect>
                </Button>
            </StackPanel>
            
            <!-- Декоративная линия внизу -->
            <Border Grid.Row="2" Height="2" Margin="40,0,40,20" Background="#4a69bd" Opacity="0.3"/>
        </Grid>
    </Border>
</Window>